<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->
	
	<!-- #### REACTIVE AGENTS ### -->
	<agent name="reactive-random">
		<set class-path="bin/"/>
		<set class-name="agents.RandomAgent"/>
		<set discount-factor=".85"/>
	</agent>
	
	<agent name="reactive-linear">
		<set class-path="bin/"/>
		<set class-name="agents.ShortSightedAgent"/>
		<set discount-factor=".85"/>
	</agent>

	<agent name="reactive-rla">
		<set class-path="bin/"></set>
		<set class-name="agents.ReactiveAgent"/>
		<set discount-factor=".1"></set>
	</agent>
	
	<agent name="reactive-rla-2">
		<set class-path="bin/"></set>
